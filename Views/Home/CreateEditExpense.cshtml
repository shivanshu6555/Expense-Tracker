@{
    ViewData["Title"] = "Create / Edit Expense";
}

@model SpendSmart.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or Edit Expense</h1>
</div>

<form asp-action="CreateEditExpenseForm" asp-controller="Home"> 
    <label hidden class="mt-4">Id</label>
    <input hidden class="form-control" type="number" placeholder="0" asp-for="Id"/>
    <label class="mt-4">Value</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Value" step="1" />
    <label class="mt-4">Description</label>
    <input class="form-control" type="text" placeholder="Enter desc" asp-for="Description" />

    <button class=" mt-4 btn btn-outline-primary" type="submit">Add</button>
</form>
